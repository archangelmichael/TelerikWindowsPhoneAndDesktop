<Page
    x:Class="ButtonClicking.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ButtonClicking"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#FF1D1D1D" Width="1367">
    	<TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="Write a program with a Button and a TextBlock. The TextBlock should show the number of clicks on the button." VerticalAlignment="Top" FontSize="48" TextAlignment="Center"/>
    	<Button x:ConnectionId='1'                      Content="Click Button" HorizontalAlignment="Center" Margin="0,127,0,0" VerticalAlignment="Top" Width="250" Height="100" FontSize="34" />
        <Button x:ConnectionId='2'                             Content="Reset Button" HorizontalAlignment="Center" Margin="550,451,567,0" VerticalAlignment="Top" Width="250" Height="100" FontSize="34" />
        <RepeatButton x:ConnectionId='3'                      Content="Hold Button" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,226,0,0" Width="250" Height="100" FontSize="34" />
        <TextBlock Text="Clicks Count" HorizontalAlignment="Center" Margin="0,328,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" FontSize="48" TextAlignment="Center"/>
        <TextBlock Text="0"  Name="ClicksCounter" HorizontalAlignment="Center" Margin="0,391,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" FontSize="48" TextAlignment="Center"/>
    </Grid>
</Page>

